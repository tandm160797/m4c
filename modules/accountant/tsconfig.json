{
	"extends": "tsconfig/react.json",
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"App": ["App"],
			"routes": ["routes"],

			"@components": ["components"],
			"@components/*": ["components/*"],

			"@pages": ["pages"],
			"@pages/*": ["pages/*"],

			"@services": ["services"],
			"@services/*": ["services/*"]
		}
	},
	"include": ["src/**/*", "vite.config.ts", "../../packages/shared/types/**/*"]
}
